{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/nrml-multilingual-schema.json",
  "title": "NRML Multilingual Model Schema",
  "description": "JSON Schema voor NRML modellen met UUID-based multilingual support",
  "type": "object",
  "required": ["$schema", "version", "language", "objectTypes"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Verwijzing naar dit schema"
    },
    "version": {
      "type": "string",
      "description": "Schema versie (bijv. 2.0)"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}$",
      "description": "Primaire taal code (ISO 639-1)"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        },
        "migrated_at": {
          "type": "string", 
          "format": "date-time"
        },
        "format_version": {
          "type": "string"
        }
      }
    },
    "domains": {
      "type": "object",
      "description": "Domein definities met UUID keys",
      "patternProperties": {
        "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
          "$ref": "#/$defs/domain"
        }
      }
    },
    "objectTypes": {
      "type": "object",
      "description": "Object type definities met UUID keys",
      "patternProperties": {
        "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
          "$ref": "#/$defs/objectType"
        }
      }
    },
    "factTypes": {
      "type": "object",
      "description": "Feittype definities met UUID keys",
      "patternProperties": {
        "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
          "$ref": "#/$defs/factType"
        }
      }
    },
    "parameters": {
      "type": "object",
      "description": "Parameter definities met UUID keys",
      "patternProperties": {
        "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
          "$ref": "#/$defs/parameter"
        }
      }
    }
  },
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$"
    },
    "languageObject": {
      "type": "object",
      "description": "Meertalige tekst object",
      "patternProperties": {
        "^[a-z]{2}$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "jsonPointer": {
      "type": "object",
      "required": ["$ref"],
      "properties": {
        "$ref": {
          "type": "string",
          "pattern": "^#/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$"
        }
      }
    },
    "domain": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "type": {
          "type": "string",
          "enum": [
            "numeric",
            "text", 
            "boolean",
            "date",
            "enumeration",
            "percentage"
          ]
        },
        "subtype": {
          "type": "string",
          "enum": ["integer", "decimal"]
        },
        "precision": {
          "type": "integer",
          "minimum": 0
        },
        "unit": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "datatype": {
      "oneOf": [
        {
          "$ref": "#/$defs/jsonPointer"
        },
        {
          "type": "object",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["numeric", "text", "boolean", "date", "percentage"]
            },
            "subtype": {
              "type": "string", 
              "enum": ["integer", "decimal"]
            },
            "precision": {
              "oneOf": [
                {
                  "type": "integer",
                  "minimum": 0
                },
                {
                  "type": "string",
                  "enum": ["days", "milliseconds"]
                }
              ]
            },
            "unit": {
              "type": "string"
            }
          }
        }
      ]
    },
    "property": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["characteristic", "numeric", "text", "boolean", "date", "percentage"]
            },
            {
              "type": "object",
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "pattern": "^#/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$"
                }
              }
            }
          ]
        },
        "subtype": {
          "type": "string",
          "enum": ["possessive", "adjective", "integer", "decimal"]
        },
        "article": {
          "$ref": "#/$defs/languageObject"
        },
        "plural": {
          "$ref": "#/$defs/languageObject"
        },
        "precision": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "string",
              "enum": ["days", "milliseconds"]
            }
          ]
        },
        "unit": {
          "type": "string"
        }
      }
    },
    "objectType": {
      "type": "object",
      "required": ["name", "definite_article", "properties"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "definite_article": {
          "$ref": "#/$defs/languageObject"
        },
        "animated": {
          "type": "boolean"
        },
        "properties": {
          "type": "object",
          "patternProperties": {
            "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
              "$ref": "#/$defs/property"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "role": {
      "type": "object",
      "required": ["name", "objectType", "cardinality"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "article": {
          "$ref": "#/$defs/languageObject"
        },
        "plural": {
          "$ref": "#/$defs/languageObject"
        },
        "objectType": {
          "$ref": "#/$defs/jsonPointer"
        },
        "cardinality": {
          "type": "string",
          "enum": ["one", "many"]
        }
      }
    },
    "factType": {
      "type": "object", 
      "required": ["name", "roles", "relation"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "relation": {
          "type": "string"
        },
        "roles": {
          "type": "object",
          "description": "Map van rollen met UUID keys",
          "patternProperties": {
            "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
              "$ref": "#/$defs/role"
            }
          },
          "additionalProperties": false,
          "minProperties": 2
        }
      }
    },
    "parameter": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "article": {
          "$ref": "#/$defs/languageObject"
        },
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["numeric", "text", "boolean", "date", "percentage"]
            },
            {
              "type": "object",
              "required": ["$ref"],
              "properties": {
                "$ref": {
                  "type": "string",
                  "pattern": "^#/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$"
                }
              }
            }
          ]
        },
        "subtype": {
          "type": "string",
          "enum": ["integer", "decimal"]
        },
        "precision": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "string",
              "enum": ["days", "milliseconds"]
            }
          ]
        },
        "unit": {
          "type": "string"
        }
      }
    }
  }
}