{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/nrml-facts-schema.json",
  "title": "NRML Facts-Based Model Schema",
  "description": "JSON Schema voor NRML modellen met unified facts structure",
  "type": "object",
  "required": ["$schema", "version", "language", "facts"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Verwijzing naar dit schema"
    },
    "version": {
      "type": "string",
      "description": "Schema versie (bijv. 3.0)"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}$",
      "description": "Primaire taal code (ISO 639-1)"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        },
        "migrated_at": {
          "type": "string", 
          "format": "date-time"
        },
        "format_version": {
          "type": "string"
        }
      }
    },
    "facts": {
      "type": "object",
      "description": "Unified fact definities met UUID keys",
      "patternProperties": {
        "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
          "$ref": "#/$defs/fact"
        }
      }
    }
  },
  "$defs": {
    "uuid": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$"
    },
    "languageObject": {
      "type": "object",
      "description": "Meertalige tekst object",
      "patternProperties": {
        "^[a-z]{2}$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "jsonPointer": {
      "type": "object",
      "required": ["$ref"],
      "properties": {
        "$ref": {
          "type": "string",
          "pattern": "^#/facts/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}(/((items)|(properties))/[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12})?(/versions/[0-9]+)?(/[ab])?$",
          "description": "Full path UUID reference format for facts (supports both items and properties paths for migration compatibility)"
        }
      }
    },
    "fact": {
      "type": "object",
      "required": ["name", "items"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "_source": {
          "type": "string",
          "description": "Source type (domain, objectType, factType, parameter, ruleGroup) - optional, for backward compatibility"
        },
        "definite_article": {
          "$ref": "#/$defs/languageObject"
        },
        "animated": {
          "type": "boolean"
        },
        "relation": {
          "type": "string"
        },
        "items": {
          "type": "object",
          "description": "Items binnen dit fact met UUID keys",
          "patternProperties": {
            "^[0-9A-Fa-f]{8}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{4}-[0-9A-Fa-f]{12}$": {
              "$ref": "#/$defs/item"
            }
          }
        }
      },
      "additionalProperties": false
    },
    "item": {
      "type": "object",
      "required": ["name", "versions"],
      "properties": {
        "name": {
          "$ref": "#/$defs/languageObject"
        },
        "article": {
          "$ref": "#/$defs/languageObject"
        },
        "plural": {
          "$ref": "#/$defs/languageObject"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/version"
          }
        }
      }
    },
    "version": {
      "type": "object",
      "required": ["validFrom"],
      "additionalProperties": true,
      "properties": {
        "validFrom": {
          "type": "string"
        },
        "validTo": {
          "type": "string"
        },
        "type": {
          "oneOf": [
            {
              "type": "string",
              "enum": ["numeric", "text", "boolean", "date", "percentage", "characteristic", "enumeration"]
            },
            {
              "$ref": "#/$defs/jsonPointer"
            }
          ]
        },
        "subtype": {
          "type": "string",
          "enum": ["integer", "decimal", "possessive", "adjective"]
        },
        "precision": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "string",
              "enum": ["days", "milliseconds"]
            }
          ]
        },
        "unit": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "cardinality": {
          "type": "string",
          "enum": ["one", "many"]
        },
        "objectType": {
          "$ref": "#/$defs/jsonPointer"
        },
        "a": {
          "type": "object",
          "properties": {
            "name": {
              "$ref": "#/$defs/languageObject"
            },
            "article": {
              "$ref": "#/$defs/languageObject"
            },
            "plural": {
              "$ref": "#/$defs/languageObject"
            },
            "cardinality": {
              "type": "string",
              "enum": ["one", "many"]
            },
            "objectType": {
              "$ref": "#/$defs/jsonPointer"
            }
          }
        },
        "b": {
          "type": "object",
          "properties": {
            "name": {
              "$ref": "#/$defs/languageObject"
            },
            "article": {
              "$ref": "#/$defs/languageObject"
            },
            "plural": {
              "$ref": "#/$defs/languageObject"
            },
            "cardinality": {
              "type": "string",
              "enum": ["one", "many"]
            },
            "objectType": {
              "$ref": "#/$defs/jsonPointer"
            }
          }
        },
        "target": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "attribute": {
              "$ref": "#/$defs/jsonPointer"
            },
            "subject": {
              "oneOf": [
                {
                  "$ref": "#/$defs/jsonPointer"
                },
                {
                  "type": "object"
                }
              ]
            }
          }
        },
        "subject": {
          "oneOf": [
            {
              "$ref": "#/$defs/jsonPointer"
            },
            {
              "type": "object"
            }
          ]
        },
        "property": {
          "$ref": "#/$defs/jsonPointer"
        },
        "expression": {
          "type": "object"
        },
        "value": {
          "type": "object"
        },
        "condition": {
          "type": "object"
        }
      }
    }
  }
}